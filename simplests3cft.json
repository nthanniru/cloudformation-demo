{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "S3Bucket": {
            "Type": "AWS::S3::Bucket",
            "Properties": {
                "BucketName": "i-named-this-bucket1991"
            }
        },
        "NewKeyPair": {
            "Type": "AWS::EC2::KeyPair",
            "Properties": {
                "KeyName": "MyNewKeyPair"
            }
        },
        "MyEC2Instance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "InstanceType": "t2.micro",
                "ImageId": "ami-0022f774911c1d690",
                "KeyName": {
                    "Ref": "NewKeyPair"
                },
                "BlockDeviceMappings": [
                    {
                        "DeviceName": "/dev/xvda",
                        "Ebs": {
                            "VolumeType": "io1",
                            "Iops": "200",
                            "DeleteOnTermination": "true",
                            "VolumeSize": "8"
                        }
                        ,
                            "Tags": [
                                {
                                    "Key": "Name",
                                    "Value": "DefaultVolume"
                                },
                                {
                                    "Key": "AvoidCleanUp",
                                    "Value": "false"
                                },
                                {
                                    "Key": "AppName",
                                    "Value": "Pega"
                                }
                            ]
                    },
                    {
                        "DeviceName": "/dev/sdk",
                        "NoDevice": {}
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "TestServer02"
                    },
                    {
                        "Key": "Pmgmt",
                        "Value": "24X7"
                    },
                    {
                        "Key": "AppName",
                        "Value": "Pega"
                    }
                ]
            }
        },
        "InstanceSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Allow http to client host",
                "VpcId": "vpc-a4f4ddde",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 22,
                        "ToPort": 22,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "SecurityGroupEgress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 80,
                        "ToPort": 80,
                        "CidrIp": "0.0.0.0/0"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "BucketName": {
            "Value": {
                "Ref": "S3Bucket"
            },
            "Description": "Name of the sample Amazon S3 bucket."
        },
        "EC2INstanceName": {
            "Value": {
                "Ref": "MyEC2Instance"
            },
            "Description": "Name of the sample Amazon EC2Instance."
        }
    }
}